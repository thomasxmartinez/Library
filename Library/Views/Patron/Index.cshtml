@model Library.Models.Patron.PatronIndexModel
@{
	ViewBag.Title = "Patron Index";
}
<h3>Team Member Index</h3>
<div id="patronIndex">
	<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="patronIndexTable">
		<thead>
			<tr>
				<th>Profile Link</th>
				<th>Last Name</th>
				<th>First Name</th>
				<th>Library Card Id</th>
				<th>Overdue Fees</th>
				<th>Paid for Books Read</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var patron in Model.Patrons)
			{
				<tr>
					<td id="patronIcon"><a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id"><img src="@patron.ImageUrl" class="imageCell" /></a></td>
					<td>@patron.LastName</td>
					<td>@patron.FirstName</td>
					<td>@patron.LibraryCardId</td>
					<td>@patron.OverdueFees</td>
					<td>
						@if (@patron.Paid == true)
	{
					<i class="fa fa-check-circle-o fa-4x text-center" aria-hidden="true" style="color:green"></i>
}
else
{
					<i class="fa fa-times-circle-o fa-4x text-center" aria-hidden="true" style="color:red"></i>

}
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>